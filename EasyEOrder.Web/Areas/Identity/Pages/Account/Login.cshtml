@page
@model LoginModel

@{
    ViewData["Title"] = "Bejelentkezés";
}


<div class="row">


    <div class="col-md-4 mt-5 mb-5">
        <h1>@ViewData["Title"]</h1>
        <section>
            <form id="account" method="post">
              @*  <h4>Use a local account to log in.</h4>*@
                <hr />
                <div asp-validation-summary="All" class="text-danger mt-5"></div>
                <div class="form-group">
                    <label asp-for="Input.Email">Email cím</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Jelszó</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">

                    </div>
                </div>
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">Bejelenkezés</button>
                </div>
                <div class="form-group">
         
                </div>
            </form>
        </section>
    </div>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
